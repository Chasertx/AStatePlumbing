@page "/"

@* Hero Section *@
<div class="hero-content border-bottom py-5 bg-white">
    <div class="container">
        <div class="row align-items-center min-vh-60">
            <div class="col-lg-7">
                <h1 class="display-2 fw-black text-dark mb-4 tracking-tighter lh-1">
                    Reliable Plumbing & <br />
                    <span class="text-danger">Rooter Solutions</span>
                </h1>
                <p class="fs-5 text-muted mb-5 pe-lg-5">
                    Licensed experts serving Central Arkansas for over 15 years. 
                    From routine maintenance to emergency rooter work, we get it done right.
                </p>
                <div class="d-flex gap-3">
                    <NavLink href="contact" class="btn btn-dark btn-lg px-5 py-3 shadow-lg fw-bold">
                        CONTACT US
                    </NavLink>

                    <NavLink href="services" class="btn btn-outline-danger btn-lg px-5 py-3 fw-bold">
                        VIEW SERVICES
                    </NavLink>
                </div>
            </div>
            @* Added this image slot to fill the right side *@
            <div class="col-lg-5 d-none d-lg-block">
                <img src="assets/images/bathTub.jpg" class="img-fluid rounded shadow-lg border-bottom border-danger border-5" alt="Plumbing Expertise" style="max-height: 450px; width: 100%; object-fit: cover;">
            </div>
        </div>
    </div>
</div>

@* Trust Bar - Full Width *@
<div class="trust-bar py-5 bg-black text-white shadow-lg">
    <div class="container">
        <div class="row g-4 text-center">
            <div class="col-md-4">
                <div class="p-3 border-md-end border-secondary">
                    <i class="bi bi-clock-history text-danger fs-1 mb-3 d-block"></i>
                    <h5 class="fw-bold mb-0 uppercase tracking-widest">15+ Years of Success</h5>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3 border-md-end border-secondary">
                    <i class="bi bi-shield-check text-danger fs-1 mb-3 d-block"></i>
                    <h5 class="fw-bold mb-0 uppercase tracking-widest">Licensed & Bonded</h5>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3">
                    <i class="bi bi-currency-dollar text-danger fs-1 mb-3 d-block"></i>
                    <h5 class="fw-bold mb-0 uppercase tracking-widest">Free Estimates</h5>
                </div>
            </div>
        </div>
    </div>
</div>

@* Photo Gallery Section *@
<section class="py-5 bg-light">
    <div class="container py-4">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-black text-dark uppercase tracking-tighter mb-0">Our Recent <span class="text-danger">Work</span></h2>
            <div class="bg-danger mx-auto mt-3" style="width: 80px; height: 5px;"></div>
        </div>

        <div class="row g-4">
            @* Projects 1-3 *@
           <div class="row g-4">
                @foreach (var project in GalleryProjects)
                {
                    <div class="col-md-4">
                        <div class="gallery-card shadow-lg border-bottom border-danger border-4">
                            <div class="overflow-hidden" style="height: 250px;">
                                <img src="assets/images/@project.ImageUrl" 
                                    class="img-fluid gallery-img w-100 h-100" 
                                    style="object-fit: cover;" 
                                    alt="@project.Title">
                            </div>
                            <div class="p-3 bg-dark text-white text-center">
                                <h6 class="mb-0 uppercase fw-bold tracking-wide small">@project.Title</h6>
                                <span class="text-danger x-small uppercase fw-bold">@project.Category</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

@code {
    // Define a simple structure for your projects
    public class ProjectItem 
    {
        public string Title { get; set; }
        public string ImageUrl { get; set; }
        public string Category { get; set; }
    }

    // List of your actual work - just add more items here as you take more photos!
    private List<ProjectItem> GalleryProjects = new List<ProjectItem>
    {
        new ProjectItem { Title = "Main Line Repair", ImageUrl = "worksite2.jpg", Category = "Repair" },
        new ProjectItem { Title = "Water Heater Install", ImageUrl = "waterHeater.jpg", Category = "Installation" },
        new ProjectItem { Title = "Sewer Cleaning", ImageUrl = "scope1.jpg", Category = "Rooter" },
    };
}